{% block stylesheets %}
<!-- Bootstrap CSS Toolkit styles -->
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
<!-- Generic page styles -->
<link rel="stylesheet" href="{{ asset('bundles/enginewerkemission/css/style.css') }}">
